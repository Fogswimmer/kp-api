###> symfony/framework-bundle ###
APP_ENV=dev
APP_DEBUG=1
APP_SECRET=change_this_secret_in_env_local
###< symfony/framework-bundle ###

###> Database (PostgreSQL in Docker) ###
DATABASE_URL=pgsql://symfony:symfony@db:5432/app_db
###< Database ###

###> Redis ###
REDIS_URL=redis://redis:6379
###< Redis ###

###> RabbitMQ ###
MESSENGER_TRANSPORT_DSN=amqp://guest:guest@rmq:5672/%2f
###< RabbitMQ ###

###> Internal HTTP service (image compressor) ###
IMG_COMPRESSOR_URL=http://img-compressor:7070
###< Internal HTTP service ###

APP_URL=https://nebelschwimmer.site
APP_DOMAIN=nebelschwimmer.site
PASSWORD_RESET_URL=https://nebelschwimmer.site/auth/password-reset
IMAGE_SERVICE_URL=http://img-compressor:7070

###> Mailer (SMTP.BZ or other) ###
# URL-encode login/password if they contain special characters
MAILER_DSN=smtp://user%40domain.com:your_encoded_password@smtp.smtp.bz:587?encryption=tls
###< Mailer ###

###> JWT ###
JWT_PASSPHRASE=change_this_passphrase_in_env_local
###< JWT ###

###> Trusted proxies and hosts ###
# For Symfony behind reverse proxy (Caddy/Nginx/etc.)
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR
TRUSTED_HOSTS=^localhost|127\.0\.0\.1|yourdomain\.com$
###< Trusted proxies and hosts ###

###> CORS ###
# If using NelmioCorsBundle or similar
CORS_ALLOW_ORIGIN=^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$
CORS_ALLOW_HEADERS=Content-Type, Authorization
CORS_ALLOW_METHODS=GET, POST, PUT, DELETE, OPTIONS
###< CORS ###

###> APP variables###
APP_URL=https://example.com
APP_DOMAIN=example.com
PASSWORD_RESET_URL=https://example.com/auth/password-reset
