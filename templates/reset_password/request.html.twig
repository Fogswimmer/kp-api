{% extends 'base.html.twig' %}
{% trans_default_domain 'reset-password' %}
{% block title %}{{ title|trans }}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h3>{{ title|trans }}</h3>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="my-2">
            <small>
               {{ small|trans }}
            </small>
        </div>
        <button class="btn btn-warning y w-100">{{ btn_send|trans }}</button>
    {{ form_end(requestForm) }}
     <button class="btn btn-secondary mt-5 w-100">{{ btn_back|trans }}</button>
{% endblock %}
